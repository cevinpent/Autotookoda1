@model IEnumerable<Autotookoda1.Models.Audi>

@{
    ViewBag.Title = "maks";
}

<h2>Teenuste eest tasumine</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.tellija)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.auto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.viga)
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.parandatud)*@
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.tellija)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.auto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.viga)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.parandatud)*@
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tasutud)

        </td> 
        <td>
            @if (item.tasutud == 1)
            {
                @:Tasutud 
            }
            else if (item.tasutud == -1)
            {
                @:Tasumata
            }
        </td>
      @*// kuvab kas teenuse eest on tasutud kui  vajutada nuppu.*@
        <td>
            @Html.ActionLink("Tasutud", "PassFail", new { id = item.id, part = "maks", result = 1 })

        </td>

    </tr>
    }

