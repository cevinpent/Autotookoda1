@model IEnumerable<Autotookoda1.Models.Audi>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@*// üldvaade kus näed kus maal on milline tellimus*@
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.tellija)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.auto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.viga)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.parandatud)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tasutud)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.tellija)
            </td>
       
       
            <td>
                @Html.DisplayFor(modelItem => item.auto)

            </td>


            <td>
                @Html.DisplayFor(modelItem => item.viga)
            </td>
        
         
            <td>
                @if (item.parandatud == 1)
                {
                    @:Parandatud
                }
                else if (item.parandatud == -1)
                {
                    @:Pole veel parandatud
                }
            </td>


          
            <td>
                @if (item.tasutud == 1)
                {
                    @:Klient on teenuse eest tasunud
                }
                else if (item.tasutud == -1)
                {
                    @:Klient pole veel teenuse eest tasunud
                }

            </td>
        
        <td>
            <li>@Html.ActionLink("Eemalda Tellimus", "Delete", "audis")</li>
        </td>
   </tr>

    }

</table>
